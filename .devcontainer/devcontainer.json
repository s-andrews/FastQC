// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
	"name": "fastqc",
	"image": "mcr.microsoft.com/devcontainers/java:1-11-bullseye",
	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "11",
			"distribution": "temurin",
			"installAnt": "true"
		}
	},
	"postCreateCommand": "sudo apt-get update && sudo apt-get install -y libfreetype6 fonts-liberation fontconfig xvfb libxrender1 libxtst6 libxi6 libxrandr2 libxinerama1 libxfixes3 libxext6 && java -version && ant -version"
}
